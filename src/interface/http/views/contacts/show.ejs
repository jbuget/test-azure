<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Contact</title>
    <style>
      :root { --fg:#111; --bg:#fff; --muted:#666; --accent:#0a7; }
      * { box-sizing: border-box; }
      body { margin: 0; font: 14px/1.4 -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica, Arial, sans-serif; color: var(--fg); background: var(--bg); }
      header { padding: 12px 16px; border-bottom: 1px solid #eee; display:flex; gap:8px; align-items:center; }
      header a { text-decoration:none; color: var(--accent); }
      main { max-width: 720px; margin: 0 auto; padding: 16px; }
      h1 { font-size: 18px; margin: 0 0 12px; }
      .row { display:flex; gap:8px; align-items:center; }
      .btn { display:inline-block; padding:6px 10px; border:1px solid #ddd; border-radius:6px; background:#f9f9f9; color:#000; text-decoration:none; cursor:pointer; }
      .muted { color: var(--muted); font-size:12px; }
    </style>
  </head>
  <body>
    <header>
      <a href="/">Accueil</a>
      <span class="muted">/</span>
      <a href="/contacts">Contacts</a>
    </header>
    <main>
      <% if (notFound) { %>
        <h1>Contact introuvable</h1>
        <a class="btn" href="/contacts">Retour</a>
      <% } else { %>
        <h1>Contact #<%= contact.id %></h1>
        <% const name = (contact.firstName||'') + ' ' + (contact.lastName||''); %>
        <p><strong>Nom:</strong> <%= name.trim() || '(Sans nom)' %></p>
        <p><strong>Téléphone:</strong> <%= contact.phoneNumber || '' %></p>
        <p><strong>Email:</strong> <%= contact.email || '' %></p>
        <p class="muted">Créé le <%= new Date(contact.createdAt).toLocaleString() %> · Mis à jour le <%= new Date(contact.updatedAt).toLocaleString() %></p>
        <div class="row" style="gap:12px;margin-top:8px;">
          <a class="btn" href="/contact/<%= contact.id %>/edit">Éditer</a>
          <a class="btn" href="/contacts">Retour</a>
        </div>
      <% } %>
    </main>
  </body>
</html>
