POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=acme
POSTGRES_HOST=localhost
POSTGRES_PORT=15432

# Note: Prisma does not expand nested variables in .env
# Use a fully expanded DATABASE_URL for CLI commands
DATABASE_URL=postgresql://admin:password@localhost:15432/acme?schema=public

PGADMIN_DEFAULT_EMAIL=admin@acme.com
PGADMIN_DEFAULT_PASSWORD=password

# Ollama local server config (optional)
# If unset, defaults are used below
CHATBOT_DEBUG=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Azure Blob Storage (for photos)
# Connection string (from Azure portal > Storage account > Access keys)
AZURE_BLOB_CONNECTION_STRING=
# Container name for profile photos
AZURE_BLOB_CONTAINER=contacts
